{
  "singleQuote": true,
  "arrowParens": "avoid",
  "importOrder": [
    "^@public/(.*)$",
    "^@assets/(.*)$",
    "@types",
    "^@types/(.*)$",
    "@lib",
    "^@lib/(.*)$",
    "@data",
    "^@data/(.*)$",
    "@layouts",
    "^@layouts/(.*)$",
    "@components",
    "^@components/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ]
}
