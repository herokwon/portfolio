{
  "singleQuote": true,
  "arrowParens": "avoid",
  "importOrder": [
    "^@public/(.*)$",
    "^@assets/(.*)$",
    "@types",
    "^@types/(.*)$",
    "@stores",
    "@lib",
    "^@lib/(.*)$",
    "@utils",
    "^@utils/(.*)$",
    "@data",
    "^@data/(.*)$",
    "@layouts",
    "^@layouts/(.*)$",
    "@features",
    "^@features/(.*)$",
    "@components",
    "^@components/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
